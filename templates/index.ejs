<script>

    let div = document.getElementById("div");
    let count = 20;


    const characters = 'abcdefghijklmnopqrstuvwxyz';
    const charactersLength = characters.length;

    window.addEventListener("keypress", (e) => {


        if (e.key === 'q') {
            count += 1;
        }
        else if (e.key === 'w') {
            count -= 1;
        }
        else {
            div.innerHTML = characters.charAt(Math.floor(Math.random() * charactersLength));
        }
        div.style.fontSize = `${count}px`
    })

</script>


